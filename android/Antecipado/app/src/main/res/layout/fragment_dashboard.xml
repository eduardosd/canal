<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/login_background"
    android:layout_height="match_parent"
    tools:context="com.sos.servico.fragments.DashboardFragment">

    <TextView
        android:id="@+id/dashboard_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:fontFamily="sans-serif-medium"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/dashboard_saldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_below="@+id/dashboard_user_name"
        android:fontFamily="sans-serif-medium"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/dashboard_button_put_money"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dashboard_saldo"
        android:background="#03a9f4"
        android:text="@string/button_put_money" />

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/dashboard_button_buy"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dashboard_button_put_money"
        android:background="#03a9f4"
        android:text="@string/button_buy" />

</RelativeLayout>
